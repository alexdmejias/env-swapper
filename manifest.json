{
  "manifest_version": 2,
  "name": "My Cool Extension",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs", "storage", "http://*/*", "https://*/*"
  ]

}
