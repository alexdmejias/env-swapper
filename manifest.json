{
  "manifest_version": 2,
  "name": "Environment Swapper",
  "author": "Alex Mejias",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "tabs", "storage", "http://*/*", "https://*/*"
  ],
  "offline_enabled": true,
  "description": "Allows the user to easily open a new tab based on the current URL"
}
